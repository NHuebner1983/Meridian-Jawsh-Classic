Ogre is Monster

constants:

   include blakston.khd
   include protocol.khd

resources:
   
   ogre_name_rsc = "ogre"
   ogre_icon_rsc = ogre.bgf
   ogre_desc_rsc = \
      "This huge creature drives fear into the heart of anyone  "
      "who comes across it. Ogres are friendly by nature but are "
      "known to be much more violent around evil entities."

   ogre_dead_icon_rsc = ogreX.bgf
   ogre_dead_name_rsc = "dead ogre"

   ogre_sound_hit = ogre_att.mp3
   ogre_sound_miss = ogre_att.mp3
   ogre_sound_death = ogre_death.mp3
   ogre_sound_aware = ogre_miss.mp3

classvars:

   vrName = ogre_name_rsc
   vrIcon = ogre_icon_rsc
   vrDesc = ogre_desc_rsc
   vrDead_icon = ogre_dead_icon_rsc
   vrDead_name = ogre_dead_name_rsc

   viTreasure_type = TID_OGRE
   viSpeed = SPEED_SLOW
   viAttributes = 0
   viLevel = 300
   viDifficulty = 9
   viAmountofLoot = 9
   viVisionDistance = 15
   
   viAttackRange = 192
   viKarma = 100
   viDefault_behavior = AI_FIGHT_SWITCHALOT | AI_FIGHT_NEWBIESAFE
   viCashmin = 5000
   viCashmax = 15000
   vrSound_hit = ogre_sound_hit
   vrSound_miss = ogre_sound_miss
   vrSound_aware = ogre_sound_aware
   vrSound_death = ogre_sound_death

   viBonusXP = 2000
   viBonusTP = 25

properties:

   piAnimation = ANIM_NONE

messages:

   Constructed()
   {
      plResistances = [ 
                        [ATCK_WEAP_NONMAGIC, 80 ],
                        [ATCK_WEAP_MAGIC, -10 ],
                        [ATCK_WEAP_BLUDGEON, -20 ],
                        [ATCK_WEAP_NERUDITE, -10 ],
                        [-ATCK_SPELL_QUAKE, 40 ],
                        [-ATCK_SPELL_UNHOLY, -50 ],
                        [-ATCK_SPELL_ACID, -30 ],
                        [-ATCK_SPELL_HOLY, 80 ],
                        [-ATCK_SPELL_COLD, 40 ],
                        [-ATCK_SPELL_FIRE, 40 ],
                        [-ATCK_SPELL_SHOCK, 40 ]
                      ];

      return;
   }

   MonsterAttack(what = $)
   {
      piAnimation = ANIM_ATTACK;
      Send(poOwner,@SomethingChanged,#what=self);
      piAnimation = ANIM_NONE;

      return;
   }

   SendLookAnimation()
   {
      AddPacket(1,ANIMATE_ONCE);
      AddPacket(4,400,2,4,2,7,2,1);

      return;
   }

   SendMoveAnimation()
   {
      AddPacket(1,ANIMATE_CYCLE,4,200,2,6,2,11);

      return;
   }

   SendAnimation()
   {
      if piAnimation = ANIM_ATTACK
      {
         AddPacket(1,ANIMATE_ONCE,4,200,2,2,2,5,2,1);

         return;
      }

      // if no body animation
      propagate;
   }

end
