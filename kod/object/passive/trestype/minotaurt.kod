MinotaurTreasure is TreasureType

constants:

   include blakston.khd

classvars:

   viTreasure_num = TID_MINOTAUR

properties:

   /// decent chance of getting an outstanding item
   piItem_att_chance = 7
   piDIff_seed = 9

messages:

   Constructed()
   {
      plTreasure = [ [ &YellowMushroom, 10],
                     [ &GreenMushroom, 10],
                     [ &PurpleMushroom, 20],
                     [ &PolishedSeraphym, 20],
                     [ &InkyCap, 10],
                     [ &NeruditeShield, 5],
                     [ &Axe, 14 ],
                     [ &JewelofFroz, 4],
                     [ &RiijaCStrain, 1 ],
                     [ &FarenCStrain, 1 ],
                     [ &ShalCStrain, 1 ],
                     [ &QorCStrain, 1 ],
                     [ &JalaCStrain, 1 ],
                     [ &WeaponCStrain, 1 ],
                     [ &KraananCStrain, 1 ]
                   ];
      propagate;
   }

end
