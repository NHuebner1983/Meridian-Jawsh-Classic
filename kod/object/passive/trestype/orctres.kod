OrcTreasure is TreasureType

constants:

   include blakston.khd

classvars:

   viTreasure_num = TID_ORC

properties:

   /// high chance of getting crappy stuff
   piItem_att_chance = 5
   piDiff_seed = 1

messages:

   Constructed()
   {
      plTreasure = [ [ &OrcTooth, 40 ],
                     [ &PurpleMushroom, 20],
                     [ &Scimitar, 18 ],
                     [ &MetalShield, 10 ],
                     [ &LeatherArmor, 5],
                     [ &ShadowAmulet, 3],
                     [ &RingofLethargy, 2], 
                     [ &DarknessScroll,1],
                     [ &RingMining, 1]
                   ];
      propagate;
   }

end
